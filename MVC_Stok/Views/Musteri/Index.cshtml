@using MVC_Stok.Models.Entity
@model List<MUSTERILER> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                    <b>ARANACAK MÜŞTERİ ADI:</b> @Html.TextBox("p")
                    <input type="submit" value="ARA" />
                </p>
            }

<table class="table table-bordered">
    <tr>
        <td>MUSTERI ID</td>
        <td>MUSTERI AD</td>
        <td>MUSTERI SOYAD</td>
        <td>SIL</td>
        <td>GUNCELLE</td>
        <td>ALERT</td>
    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MUSTERIID</td>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GUNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id = mus.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
            </tr>
            }
    </tbody>
</table>
<a href="/MUSTERI/YENIMUSTERI/" class="btn btn-primary">YENI MUSTERI EKLE</a>